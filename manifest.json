{
  "manifest_version": 3,
  "name": "시아시간",
  "description": "그룹웨어에 추가적인 근태정보 제공",
  "version": "1.6",
  "permissions": [
    "scripting"
  ],
  "host_permissions": [
    "https://gw.si-analytics.ai/gw/bizbox.do"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "action": {
    "default_popup": "scripts/index.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}
